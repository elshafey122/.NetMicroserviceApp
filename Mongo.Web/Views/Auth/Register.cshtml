@using Mongo.Web.Model.Auth
@model RegisterationRequest

<form method="post">
    <div class="container border p-4">

        <div class="row text-center">
            <h1>Register</h1>
        </div>

        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <label asp-for="@Model.Name">Name</label>
                <input class="form-control" asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <label asp-for="@Model.UserName">UserName</label>
                <input class="form-control" asp-for="@Model.UserName" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <label asp-for="@Model.PhoneNumber">PhoneNumber</label>
                <input class="form-control" asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <label asp-for="@Model.Password">Password</label>
                <input class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            @* <div class="row col-12 col-md-6 pb-2 offset-md-3"> // for select items using viewbag
                <label >Role</label>
                <select asp-items="@ViewBag.Rolelist" asp-for="Email" class="form-select">
                    <option selected>--select role--</option>
                </select>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div> *@

            <div class="row col-12 col-md-6 pb-2 offset-md-3">
                <button type="submit" class="btn btn-success form-control" value="Register">Register</button>
            </div>

        </div>
        
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}