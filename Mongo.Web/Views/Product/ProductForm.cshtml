@using Mongo.Web.Model.Product
@model ProductDto

<form method="post" asp-action="Product@(Model.ProductId>0?"Update":"Create")">
    <div class="container border p-3">
        <h1 class="text-white text-center">@(Model.ProductId>0?"Update":"Create") Product</h1>
        <hr />
        <div class="row">
            <div>
                <input type="hidden" asp-for="@Model.ProductId" value="@Model.ProductId"/>
            </div>
            <div class="col-2">
                <label asp-for="@Model.Name" class="control-label pt-2 style="font-size:20px">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Name" type="text" class="form form-control" value="@Model.Name"/>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="@Model.CategoryName" class="control-label pt-2 style="font-size:20px">CategoryName</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.CategoryName" type="text" class="form form-control" value="@Model.CategoryName"/>
                <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="@Model.Price" class="control-label pt-2 style="font-size:20px">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Price" type="text" class="form form-control" value="@Model.Price"/>
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="@Model.Price" class="control-label pt-2 style="font-size:20px">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.Description" type="text" class="form form-control" value="@Model.Description" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>

            <div class="col-5">
                <button type="submit" class="btn btn-success form-control" value="Create">Submit</button>
             </div>
                
        </div>

    </div>

    </div>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}